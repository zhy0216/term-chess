{
  "name": "term-chess",
  "version": "1.0.0",
  "description": "Terminal-based Chinese chess game",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm src/index.tsx",
